@page "/ApplicantsReferred/municipality"
@using webapi_peso.ViewModels
@inject HttpClient Http
@inject IJSRuntime JS

<PageTitle>Applicants Referred Report</PageTitle>

<div class="nsrp-container">
    <h3>Applicants Referred Report</h3>

    <div class="jf-card jf-list-card reports">

        <!-- Filters & Actions -->
        <div class="filters-actions">

            <!-- YEAR FILTER -->
            <div class="filters">
                <label>Year:</label>
                <select @onchange="OnYearChanged">
                    @for (int y = DateTime.Now.Year; y >= 2000; y--)
                    {
                        <option value="@y">@y</option>
                    }
                </select>
            </div>

            <!-- MUNICIPALITY FILTER -->
            <div class="filters">
                <label>Search Municipality:</label>
                <select @onchange="OnMunicipalityChanged">
                    <option value="">All</option>
                    @foreach (var muni in municipalityList)
                    {
                        <option value="@muni">@muni</option>
                    }
                </select>
            </div>

            <div class="actions">
                <button class="nsrp-toggle" @onclick="ExportCsv">Export CSV</button>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <p><em>Loading report...</em></p>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <p class="error">@errorMessage</p>
    }
    else if (FilteredData != null && FilteredData.Any())
    {
        <!-- ✅ REPORT TABLE -->
        <div id="print-section">
            <h5>APPLICANTS REFERRED</h5>
            <h6>@selectedYear</h6>

            <div class="table-scroll">
                <table class="report-table jf-table">
                    <thead>
                        <tr>
                            <th>Row Number</th>
                            <th>Municipality</th>
                            <th>Number of Applicants</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in PagedData)
                        {
                            <tr>
                                <td>@item.RowNumber</td>
                                <td>@item.MunicipalityName</td>
                                <td>@item.NumberOfApplicants</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination controls -->
            @if (totalPages > 1)
            {
                <div class="pagination-controls no-print">
                    <button class="nsrp-toggle" @onclick="PrevPage" disabled="@(!CanPrev)">Previous</button>
                    <span>Page @currentPage of @totalPages</span>
                    <button class="nsrp-toggle" @onclick="NextPage" disabled="@(!CanNext)">Next</button>
                </div>
            }
        </div>
    }
    else
    {
        <p>No records found for this year.</p>
    }
</div>

@code {
    private int selectedYear = DateTime.Now.Year;
    private string selectedMunicipality = string.Empty;

    private bool isLoading = false;
    private string? errorMessage;
    private List<ConsolidatedReportViewModel> reportData = new();
    private List<string> municipalityList = new();

    // ✅ Filtered data for display only
    private IEnumerable<ConsolidatedReportViewModel> FilteredData =>
        string.IsNullOrEmpty(selectedMunicipality)
            ? reportData
            : reportData.Where(x => x.MunicipalityName == selectedMunicipality);

    // ✅ Pagination
    private int currentPage = 1;
    private int pageSize = 20;
    private int totalPages => (int)Math.Ceiling((double)FilteredData.Count() / pageSize);
    private IEnumerable<ConsolidatedReportViewModel> PagedData =>
        FilteredData.Skip((currentPage - 1) * pageSize).Take(pageSize);

    private bool CanPrev => currentPage > 1;
    private bool CanNext => currentPage < totalPages;

    // ✅ Load report for selected year
    private async Task LoadReport(ChangeEventArgs? e = null)
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            selectedMunicipality = string.Empty; // reset filter

            var response = await Http.GetFromJsonAsync<List<ConsolidatedReportViewModel>>(
                $"api/Manager/GetReferralReport/{selectedYear}/false");

            reportData = response ?? new List<ConsolidatedReportViewModel>();

            municipalityList = reportData
                .Select(x => x.MunicipalityName)
                .Distinct()
                .OrderBy(x => x)
                .ToList();

            currentPage = 1;
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load report: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    // ✅ When user changes year
    private async Task OnYearChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int year))
        {
            selectedYear = year;
            await LoadReport();
        }
    }

    // ✅ When user selects a municipality (filter only, not export)
    private void OnMunicipalityChanged(ChangeEventArgs e)
    {
        selectedMunicipality = e.Value?.ToString() ?? string.Empty;
        currentPage = 1;
        StateHasChanged();
    }

    private void PrevPage() => currentPage = Math.Max(1, currentPage - 1);
    private void NextPage() => currentPage = Math.Min(totalPages, currentPage + 1);

    // ✅ Export CSV (always by year)
    private async Task ExportCsv()
    {
        try
        {
            var url = $"api/Manager/GetReferralReport/{selectedYear}/true";
            var response = await Http.GetStringAsync(url);
            await JS.InvokeVoidAsync("open", response.Replace("\"", ""), "_blank");
        }
        catch (Exception ex)
        {
            errorMessage = $"Export failed: {ex.Message}";
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadReport();
    }
}
