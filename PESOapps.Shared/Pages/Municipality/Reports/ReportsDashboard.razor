@page "/Report/municipality"
@inject NavigationManager Navigation

<PageTitle>Reports</PageTitle>
<div class="nsrp-container">
    <h3 class="dashboard-title">Reports Dashboard</h3>
    <div class="dashboard-grid">

        <!-- Applicants Registered -->
        <div class="report-card">
            <h3>Applicants Registered</h3>
            <p>Monthly report for registered applicants.</p>
            <button class="nsrp-toggle btn-orange" @onclick="@(() => NavigateToReport("ApplicantsRegistered/municipality"))">
                Generate Report
            </button>
        </div>

        <!-- Vacancies Solicited -->
        <div class="report-card">
            <h3>Vacancies Solicited</h3>
            <p>Monthly report for job vacancies.</p>
            <button class="nsrp-toggle btn-green" @onclick="@(() => NavigateToReport("VacanciesSolicited/municipality"))">
                Generate Report
            </button>
        </div>

        <!-- Applicants Referred -->
        <div class="report-card">
            <h3>Applicants Referred</h3>
            <p>Monthly report for referred applicants.</p>
            <button class="nsrp-toggle btn-blue" @onclick="@(() => NavigateToReport("ApplicantsReferred/municipality"))">
                Generate Report
            </button>
        </div>

        <!-- Applicants Placed -->
        <div class="report-card">
            <h3>Applicants Placed</h3>
            <p>Monthly report for placed/hired applicants.</p>
            <button class="nsrp-toggle btn-red" @onclick="@(() => NavigateToReport("ApplicantsPlaced/municipality"))">
                Generate Report
            </button>
        </div>

        <!-- LMI ANALYSIS -->
        <div class="report-card">
            <h3>LMI ANALYSIS</h3>
            <p>Labor Market Updates.</p>
            <button class="nsrp-toggle btn-teal" @onclick="@(() => NavigateToReport("lmianalysis/municipality"))">
                Generate Report
            </button>
        </div>
    </div>
</div>
@code {
    private void NavigateToReport(string url)
    {
        Navigation.NavigateTo(url);
    }
}
