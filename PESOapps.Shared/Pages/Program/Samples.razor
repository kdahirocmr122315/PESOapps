@page "/Beneficiary"
@inject ApiService ApiService

<h3>Beneficiary</h3>
<div class="form-cont">
    @if (Beneficiary == null)
    {
        <p>Loading...</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Lastname</th>
                    <th>Age</th>
                    <th>Barangay</th>
                    <th>Municipality</th>
                    <th>Birthday</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Beneficiary)
                {
                    <tr>
                        <td>@product.ID</td>
                        <td>@product.Firstname</td>
                        <td>@product.Lastname</td>
                        <td>@product.Age</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
@code {
    private List<Beneficiary>? Beneficiary;

    protected override async Task OnInitializedAsync()
    {
        Beneficiary = await ApiService.GetProductsAsync();
    }
}